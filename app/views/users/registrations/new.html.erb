<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group row">
    <label for="example-text-input" class="col-2 col-form-label">Text</label>
    <div class="col-10">
      <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
    </div>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :names, required: true %>
    <%= f.input :surnames, required: true %>
    <%= f.collection_select(:area_of_residence_id, Area.comunas.all, :id, :name, {prompt: 'Seleccione comuna de residencia'}, {'id' => 'post_comuna_dropdown','class' => 'chosen-select form-control'}) %>
    <%= f.collection_select(:area_of_interest_id, Area.comunas.all, :id, :name, {prompt: 'Seleccione comuna de interÃ©s'}, {'id' => 'post_comuna_dropdown','class' => 'chosen-select form-control'}) %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
