<%= simple_form_for(resource, as: resource_name, :url => { :controller => "users/sessions", :action => "create" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false, label: 'ContraseÃ±a' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", :class => "btn btn-default" %>
  </div>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('.forgot'), new_password_path(resource_name) %><br />
<% end -%>
