<div>
		<a href="" class="close cd-img-replace">Close</a>
		<h2><%= @project.title %></h4>
				<hr></hr>
				<% if @project.mark == true %>
	        <p class="counter-wrapper">
						Días para solicitar observaciones  <%= number_to_spans @project.remaining_days %>
						<% unless @project.end_date_2.nil? %>
							<br>
							Días para realizar observaciones  <%= number_to_spans @project.remaining_days_2 %>
						<% end %>
						<a href="https://drive.google.com/open?id=0B5D5lXUFnFJselRUSzFVNzFsVjQ" target="_blank" class="btn btn-primary pull-right">¡Participa Ya!</a>
						</p>
	      <% else %>
	        <p class="counter-wrapper">
						Días para recibir observaciones <%= number_to_spans @project.remaining_days %>
						<a href="https://drive.google.com/open?id=0B5D5lXUFnFJsSkRnTC1VdkM5WjA" target="_blank" class="btn btn-primary pull-right">¡Participa Ya!</a>
					</p>
	      <% end %>
		<h4><%= @project.description %></h4>

		<div>
			<%= link_to  ' + info ', @project.url_link, target: '_blank' unless @project.url_link.nil?  %>

			<% unless @project.image.size.nil? %>
				<%= image_tag @project.image.url %>
			<% end %>
		</div>

</div>
