<div class="card">
  <div class="card-block">
    <div class="card-header">
          <h4> <%= t '.title' %> </h4>
    </div>

    <%= link_to "Nuevo Proyecto", new_project_path, remote: true, id:"new_project_link", class: "btn btn-primary" %>
    <%= paginate @projects %>

    <table id="projects_table" border=1>
      <tr>
        <th>  <%= t '.id_header' %>  </th>
        <th>  <%= t '.title_header' %>  </th>
        <th>  <%= t '.date_header' %>  </th>
        <th>  <%= t '.exists_image_header' %>  </th>
      </tr>
      <% @projects.each do |project| %>
        <%= render "projects/row", project: project %>
      <% end %>
    </table>
    <%= page_entries_info @projects %>
  </div>
</div>
