<div class="card">
  <div class="card-block">
    <h2> <%= t '.title' %> </h2>

    <%= link_to "Nuevo Post", new_post_path, remote: true, id:"new_post_link", class: "btn btn-primary pull-right" %>
    <p class="paginate"><%= paginate @posts %></p>

    <table id="posts_table" border=1 class="table">
      <thead>
      <tr>
        <th>  <%= t '.id_header' %>  </th>
        <th>  <%= t '.title_header' %>  </th>
        <th>  <%= t '.body_header' %>  </th>
        <th>  <%= t '.exists_image_header' %>  </th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <%= render "posts/row", post: post %>
      <% end %>
    </table>
    <p><%= page_entries_info @posts %></p>
  </div>
</div>
