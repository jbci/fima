<% if @post.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody tr#post_<%= @post.id %>').replaceWith(' <%= j render "row", post: @post %>');
  $('.alert-success').html("El posto ha sido modificado con Ã©xito").show();
  $('#post-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @post.errors.full_messages[0] %>');
<% end %>
