<% if @post.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody tr#<%= @post.id %>').remove();
  $('.alert-success').html("El post ha sido eliminado con Ã©xito").show();
  $('#post-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @post.errors.full_messages[0] %>');
<% end %>
