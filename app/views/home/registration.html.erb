<div class="wrapper">
  <h1>Registro</h1>
  <div class="row">
    <div class="col-6">
      <h4>Cambia el color de tu comuna ¡Regístrate! </h4>
      <div id="social_logins">
        <% if user_signed_in? %>
        <div>Signed in as... <%= current_user.names %> | <%= link_to "Sign out", destroy_user_session_path %> </div>
          <%= render :file => "users/registrations/edit" %>
        <% else %>
        <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, :class => "btn btn-primary" %>
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, :class => "btn btn-primary" %>
        <!-- <%= link_to "Sign in with email", new_user_session_path %> -->
        <%= render :file => "users/registrations/new" %>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <% if user_signed_in? %>
        <!-- <div>Signed in as... <%= current_user.names %> | <%= link_to "Sign out", destroy_user_session_path %> </div> -->
      <% else %>
        <h4>¿Ya tienes cuenta? Adelante</h4>
        <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
        <!-- <%= link_to "Sign in with email", new_user_session_path %> -->
        <%= render :file => "users/sessions/new" %>
      <% end %>
    </div>

  </div>
</div>
