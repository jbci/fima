<ul class="cd-slider">
  <% @initiatives.each_with_index do |i, index|%>
  <li class="<%= (index===0) ? 'current' : '' %>">
    <a href="" data-id="<%= i.id %>" id="post_thumb_<%=i.id %>">
      <% if i.image.size.nil? %>
        <img src="/assets/img.png" alt="project image">
      <% else %>
        <%= image_tag i.image.url, :alt => "project image" %>
      <% end %>
      <div class="project-info">
        <h5> <%= i.title %> </h5>
        <p> <%= i.body.truncate(37, :omission => "...mÃ¡s") %> </p>
      </div>
    </a>
  </li>
  <% end %>
</ul>
