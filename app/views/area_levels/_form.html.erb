<div id="area_level-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"> <%= t '.area_modal_title' %> </h4>
      </div>
        <%= simple_form_for @area_level, remote: true, authenticity_token: true, :html => { :multipart => true }, :data => { :type => :script } do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, :id => 'area_level_modal_button', :format => "js", :remote => true %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
