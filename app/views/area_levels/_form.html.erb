<div id="area_level-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"> <%= t '.area_modal_title' %> </h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @area_level, remote: true, authenticity_token: true, :html => { :multipart => true }, :data => { :type => :script } do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>

            <% unless @area_level.parent.nil? %>
              <%= f.hidden_field :parent_id, value: @area_level.parent.id %>
            <% end %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, :id => 'area_level_modal_button', :format => "js", :remote => true, :input_html => {"data-dismiss" => "modal"}  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
