<li id="area_level_li_<%=@area_level.id%>">
  <%= link_to(@area_level.name, area_level_children_path(@area_level), remote: true) %>
    <%= link_to '', edit_area_level_path(@area_level), remote: true, class: "fa fa-pencil-square" %>
    <%= link_to '', @area_level, method: :delete, data: { confirm: 'Are you sure?' } , remote: true, class: "fa fa-trash"%>
    <%= link_to '', new_area_level_child_path(@area_level), method: :get , remote: true, class: "fa fa-plus-square"%>
  <ul>
    <% unless @children.nil? %>
      <% @children.each do |area_level| %>
        <li id="area_level_li_<%=area_level.id%>" > <%= link_to(area_level.name, area_level_children_path(area_level), remote: true) %>
          <%= link_to '', edit_area_level_path(area_level), remote: true, class: "fa fa-pencil-square" %>
          <%= link_to '', area_level, method: :delete, data: { confirm: 'Are you sure?' } , remote: true, class: "fa fa-trash"%>
          <%= link_to '', new_area_level_child_path(area_level), method: :get , remote: true, class: "fa fa-plus-square"%>
        </li>
      <% end %>
    <% end %>
  </ul>
</li>
