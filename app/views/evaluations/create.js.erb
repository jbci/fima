<% if @evaluation.errors.empty? %>
  // add the row to the table, show alert and hide modal
  //console.log("running create.js.erb");
  $('table tbody').append(' <%= j render "row", evaluation: @evaluation %>');
  $('.alert-success').html("La evaluación se creó correctamente").show();
  $(document).on('hidden.bs.modal', function(e) {
    $('#evaluation-modal').remove();
  });
  $('#evaluation-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @evaluation.errors.full_messages[0] %>');
<% end %>
